{% extends "admin/sirket/index.html.twig" %}

{% block title %}
    {{ data.title }}
{% endblock %}

{% block admin_icerik %}
    {% if not data.anket.detay %}
        <script>
            window.location.href = "?link=anketler";
        </script>
    {% endif %}

    <!-- İŞLEM MESAJ -->
    {{ include("admin/sirket/inc/sonuc.html.twig") }}

    <div class="row">

        <div class="col-md-6 col-md-offset-3">

            <div class="panel panel-primary">

                <div class="panel-heading">
                    <h4>Seçenek Ekleme</h4>
                </div>

                <div class="panel-body">

                    <form style="width: 75%; margin: 0 auto" method="post" class="form-horizontal" action="sirket/inc/anket.php">
                        <input name="anket_id" type="hidden" value="{{ data.GET.anket_id }}"/>

                        <div class="form-group" >
                            <input class="form-control" type="text" name="secenek" id="baslik" placeholder="Seçenek başlığı giriniz."/>
                        </div>

                        <div class="form-group">
                            <input class="btn btn-primary" type="submit" name="secenek" value="Ekle"/>
                        </div>

                    </form>

                </div>
            </div>

        </div>

    </div>

{% endblock %}
