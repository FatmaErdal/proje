{% extends "admin/sirket/index.html.twig" %}

{% block title %}
    {{ data.title }}
{% endblock %}

{% block admin_icerik %}

<section>

    <div class="panel panel-primary" id="duzenle" style="width: 75%; margin: 0 auto; margin-bottom: 50px">

        <div class="panel-heading">
            <h4 class="panel-title text-center">Haber Ekleme</h4>
        </div>

        <div class="panel-body">

            <p class="text-center">Haber bilgilerinizi aşağıda girebilirsiniz.</p>
            <hr/>
            <form class="form-horizontal" action="sirket/inc/haberEkle.php" method="post" enctype="multipart/form-data"style="width: 90%; margin: 0 auto;" >
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="baslik">Haber Başlık</label>
                        </div>
                        <div class="col-md-9">
                            <input type="text" id="baslik" name="baslik" value="" class="form-control"/>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="kisa_aciklama">Kısa Açıklama</label>
                        </div>
                        <div class="col-md-9">
                            <input type="text" id="kisa_aciklama" name="kisa_aciklama" value="" class="form-control"/>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="uzun_aciklama">Uzun Açıklama</label>
                        </div>
                        <div class="col-md-9">
                            <textarea name="uzun_aciklama" id="uzun_aciklama" cols="30" rows="10" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
                <!-- Resim -->
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="resim">Resim</label>
                        </div>
                        <div class="col-md-9">
                            <input class="form-control" type="file" name="resim" id="resim"/>
                        </div>
                    </div>
                </div>

                <!-- Aktif / Pasif -->
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="resim">Aktif / Pasif</label>
                        </div>
                        <div class="col-md-9">
                            <select class="form-control" name="durum" id="durum">
                                <option value="1">Aktif</option>
                                <option value="2">Pasif</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Kategori -->
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="kategori_id">Kategori</label>
                        </div>
                        <div class="col-md-9">
                            <select class="form-control" name="kategori_id" id="kategori_id">
                                {% for kategori in data.kategoriler %}
                                    <option value="{{ kategori.id }}">{{ kategori.adi }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Kategori -->
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3"> </div>
                        <div class="col-md-9 text-right">
                            <input type="submit" value="Ekle" name="ekle" class="btn btn-primary"/>
                            <a class="btn btn-danger" href="?link=haberler">İptal</a>
                        </div>
                    </div>
                </div>
            </form>

        </div>

        <div class="panel-footer"></div>
    </div>
</section>
{% endblock %}