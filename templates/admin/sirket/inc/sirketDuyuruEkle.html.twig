{% extends "admin/sirket/index.html.twig" %}

{% block title %}
    {{ data.title }}
{% endblock %}

{% block admin_icerik %}

    <script type="text/javascript" src="static/tinymce/tinymce.min.js"></script>
    <script type="text/javascript">
        tinymce.init({
            selector: "textarea",
            plugins: [
                "advlist autolink lists link image charmap print preview anchor",
                "searchreplace visualblocks code fullscreen",
                "insertdatetime media table contextmenu paste"
            ],
            toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image"
        });
    </script>

    <div class="row">

        <div class="col-md-8 col-md-offset-2">

            <div class="panel panel-primary">

                <div class="panel-heading">
                    <h4>Duyuru Ekleme</h4>
                </div>

                <div class="panel-body">

                    <form style="width: 90%; margin: 0 auto" method="post" class="form-horizontal" action="sirket/inc/sirketDuyuru.php">

                        <div class="form-group" >
                            <input class="form-control" type="text" name="baslik" id="baslik" placeholder="Duyuru başlığını giriniz."/>
                        </div>

                        <div class="form-group" >
                            <textarea name="detay" id="detay" cols="30" rows="10" class="form-control" placeholder="Detay giriniz."></textarea>
                        </div>

                        <div class="form-group">
                            <input class="btn btn-primary" type="submit" name="ekle" value="Ekle"/>
                        </div>

                    </form>

                </div>
            </div>

        </div>

    </div>
{% endblock %}
