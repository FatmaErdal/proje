{% extends "admin/sirket/index.html.twig" %}

{% block title %}
    {{ data.title }}
{% endblock %}

{% block admin_icerik %}

<section>

    <div class="panel panel-primary" style="width: 75%; margin: 0 auto">

        <div class="panel-heading">
            <h4 class="panel-title text-center">Kategori Ekleme</h4>
        </div>

        <div class="panel-body">

            <form action="sirket/inc/kategoriEkle.php" method="post" style="width: 75%; margin: 0 auto">
                <!-- ÜST KATEGROİ -->
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <label>Kategoriler</label>
                        </div>
                        <div class="col-md-9">
                            <select name="topCategory" id="urunTopKategori">
                                <option value='0'>Haber Kategorinizi Seçiniz </option>";
                                {% for kategori in data.kategoriler %}
                                    <option value="{{ kategori.id }}">{{ kategori.adi }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="baslik">Kategori Adı</label>
                        </div>
                        <div class="col-md-9">
                            <input type="text" name="baslik" id="baslik" class="form-control"/>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 text-right">
                            <input class="btn btn-primary" type="submit" name="ekle" value="Ekle"/>
                        </div>
                    </div>
                </div>

            </form>

        </div>

        <div class="panel-footer"></div>

    </div>

</section>
{% endblock %}