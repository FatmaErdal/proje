{% extends "admin/sirket/index.html.twig" %}

{% block title %}
    {{ data.title }}
{% endblock %}

{% block admin_icerik %}

    <section>
        <h1>Kullanıcı Ayarları: </h1>
        <p>Sayın {{ data.admin.adi }}, kişisel bilgilerinizi ve şirket bilgilerinizi aşağıda güncelleyebilirsiniz.</p>


        <div class="row">
            <!-- KULLANICI BİLGİLERİ -->
            <div class="col-lg-5">
                <header>
                    <h3>Kullanıcı Bilgileri</h3>
                </header>
                <table class="table table-striped table-condensed table-responsive" style="">
                    <tbody>
                        <tr>
                            <th>Adı Soyadı</th>
                            <td class="text-right">{{ data.admin.adi }} {{ data.admin.soyadi }}</td>
                        </tr>
                        <tr>
                            <th>Mail Adresi</th>
                            <td class="text-right">{{ data.admin.mail }}</td>
                        </tr>
                    </tbody>
                    <tfooter>
                        <td colspan="2" class="text-right">
                            <a href="" class="btn btn-default">Düzenle</a>
                            <a href="" class="btn btn-default">Şifre Değiştir</a>
                        </td>
                    </tfooter>
                </table>
                <hr/>
            </div>

            <div class="col-lg-5 col-lg-offset-1">
                <header>
                    <h3>Şirket bilgileri</h3>
                </header>
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>Şirket Adı</th>
                            <td class="text-right">{{ data.sirket.adi }}</td>
                        </tr>
                        <tr>
                            <th>Adres</th>
                            <td class="text-right">{{ data.sirket.adres }}</td>
                        </tr>
                        <tr>
                            <th>Tel: </th>
                            <td class="text-right">{{ data.sirket.tel }}</td>
                        </tr>
                        <tr>
                            <th>Sektör</th>
                            <td class="text-right">{{ data.sirket.sektor_adi }}</td>
                        </tr>
                    </tbody>
                    <tfooter>
                        <tr>
                            <td colspan="2" class="text-right">
                                <a class="btn btn-default btn-sm" href="">Düzenle</a>
                            </td>
                        </tr>
                    </tfooter>
                </table>

                <div class="text-center">

                    <a class="btn btn-default btn-sm" href="">Yeni Yetkili Ata</a>
                    <a class="btn btn-default btn-sm" href="">Logo Değiştir</a>
                    {% if data.sirket.premium == 0 %}
                        <a class="btn btn-primary btn-sm" href="">Premium Başvuru</a>
                    {% else %}
                        <a class="btn btn-danger btn-sm" href="">Premium İptal</a>
                    {% endif %}
                </div>
                <hr/>
            </div>
        </div>
    </section>

{% endblock %}
