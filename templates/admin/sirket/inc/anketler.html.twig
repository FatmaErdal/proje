{% extends "admin/sirket/index.html.twig" %}

{% block title %}
    {{ data.title }}
{% endblock %}

{% block admin_icerik %}
    <!-- İŞLEM MESAJ -->
    {{ include("admin/sirket/inc/sonuc.html.twig") }}

    <div class="row" style="margin-bottom: 25px">
        <div class="col-md-4">
            <a class="btn btn-primary" href="?link=anketler&islem=ekle">Anket Ekle</a>
        </div>
    </div>

    <!-- dataTable.js işlemleri -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.6/css/jquery.dataTables.css"/>

    <table class="table display table-hover table-condensed table-responsive" id="duyurular">

        <thead>
            <tr>
                <th class="text-center">Anket Başlık</th>
                <th class="text-center">İşlemler</th>
            </tr>
        </thead>

        <tbody>
            {% for anket in data.anketler %}
                <tr>
                    <td class="text-center">
                        <p>{{ anket.anket_baslik }}</p>
                    </td>
                    <td class="text-center">
                        <form method="post" action="sirket/inc/anket.php">
                            <a class="btn btn-primary" href="?link=anketler&id={{ anket.anket_id }}">Detay</a>
                            <input name="anket_id" type="hidden" value="{{ anket.anket_id }}"/>
                            <input type="submit" value="Sil" name="sil" class="btn btn-danger"/>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>

    </table>

{% endblock %}
