{% extends "index.html.twig" %}

{% block title %}
    {{ data.title }}
{% endblock %}

{% block content %}
    <section>
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Şifrelerinizi giriniz.
                    </h3>
                </div>
                <div class="panel-body">
                    <form action="inc/sifreDegistir.php" method="POST">
                        <input name="token" type="hidden" value="{{ data.GET.key }}"/>
                        <div class="form-group">
                            <input class="form-control" type="password" autofocus="" name="fSifre" placeholder="Şifrenizi giriniz.">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="password" autofocus="" name="fSifreTekrar" placeholder="Şifrenizi tekrar giriniz.">
                        </div>
                        <input class="btn btn-lg btn-block btn-one" type="submit" value="Değiştir" name="sifre"/>
                    </form>
                </div>
            </div>
            {{ include("inc/sonuc.html.twig") }}
        </div>
    </section>
    <div class="clearfix"></div>
{% endblock %}
